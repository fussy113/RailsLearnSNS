<!DOCTYPE html>
<html>
  <head>
    <title>Myblog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if user_signed_in? %>
      <p><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></p>
    <% end %>
    <% if notice %>
      <p class="notice" style="color: greenyellow"><%= notice %></p>
    <% elsif alert %>
      <p class="alert" style="color: red"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
