<h1><%= @room.name %></h1>
<div>
  <ul id="logs", data-room_id="<%= @room.id %>">
  <% @logs.each do |log| %>
    <li>
      <span class="name"><%= log.user.name %> </span>
      <span class="content"> <%= log.content %> </span>
    </li>
  <% end %>
  </ul>
</div>

<%= form_for @textlog, :url => {:controller => :textlogs ,:action => :create} , data: { remote: true,behavior: 'room_speaker' } do |f| %>
  <%= f.text_area :content , :id => 'content' %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <br>
  <%= f.submit %>
<% end %>

