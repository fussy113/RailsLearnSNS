<div class="mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text">Edit Chat Room</h2>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <%= form_for @room, :url => {:action => 'update' } do |f| %>

      <%= render :partial => 'form' , :locals => {:f => f} %>

      <%= f.submit '更新', :class => 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
      <%= link_to "削除", "/rooms/#{@room.id}", :method => :delete ,data:{
          confirm: "本当に削除します、よろしいですか?"
      } %>
    <% end %>
  </div>
</div>